<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>
 
<% if has_posts(@user)!= 0 %>
  <h2>Posts</h2>
  <%= render @user.posts %>
<% else %>
  <div>
    <%= "#{@user.name} has not submitted any posts yet" %>
  </div>
<% end %>

<% if has_comments(@user) != 0 %>
 <h2>Comments</h2>
 <%= render @user.comments %>
<% else %>
  <div>
    <%= "#{@user.name} has not submitted any comments yet" %>
  </div>
<% end %>

<% if has_favorites(@user) != 0 %>
  <h2>Favorites</h2>
  <% @user.favorites.each do |favorite| %>
    <% avatar_url = @user.avatar_url(32) %>
    <% if avatar_url %>
      <div class="media-left">
        <%= image_tag avatar_url, class: 'media-object' %>
      </div>
    <% end %>
    <div class="media-body">
    <%= "#{favorite.post.comments.count} favorites" %> </br>
    <%= "#{favorite.post.votes.count} votes" %>
    </div>
    <%= favorite.post.body %>
  <% end %>
<% else %>
    <%= "#{@user.name} has not favorited any posts yet" %>
<% end %>